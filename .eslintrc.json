{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "no-case-declarations": [
            "off"
        ],
        "@typescript-eslint/no-var-requires": [
            "off"
        ],
        "prefer-template": [
            "warn"
        ],
        "capitalized-comments": [
            "error",
            "always"
            // { "excepions": ["/", "*"] }
        ],
        "spaced-comment": [
            "error",
            "always",
            { "exceptions": ["*"]}
        ],
        "camelcase": [
            "error"
        ],
        "key-spacing": [
            "error",
            { "beforeColon": false,
                "afterColon": true,
                "align": "value"
            }
        ],
        "curly": [
            "error",
            "multi-or-nest"
        ],
        "no-irregular-whitespace": [
            "warn",
            {"skipComments": true}
        ],
        "no-multiple-empty-lines": [
            "error",
            { "max": 1 }
        ],
        "semi-spacing": [
            "error",
            { "before": false, "after": true }
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-inner-declarations": [
            "off"
        ],
        "prefer-const":[
            "warn"
        ],
        "sort-vars": [
            "warn"
        ],
        "vars-on-top": [
            "warn"
        ]
    }
}
